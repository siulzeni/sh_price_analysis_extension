{
    "manifest_version": 2,
    "name": "SH Price Analysis",
    "description": "Navigate To StubHub Price Analysis In One Easy Click",
    "version": "2.0",


    "browser_action": {
        "default_icon": "icons/icon24.png",
        "default_title": "Click Here!"
    },
    "background": {
        "scripts": ["mainScript.js"],
        "persistent": false 
    },

    "icons": { 
        "24": "icons/icon24.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
     },


    "permissions": [
        "tabs",
        "activeTab",
        "clipboardRead",
        "contextMenus"
    ]
}